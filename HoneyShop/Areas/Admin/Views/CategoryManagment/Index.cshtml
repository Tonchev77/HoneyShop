@using HoneyShop.ViewModels.Admin.CategoryManagment
@using Microsoft.AspNetCore.Identity
@model IEnumerable<CategoryManagmentIndexViewModel>

@inject RoleManager<IdentityRole> roleManager;
@{
    ViewData["Title"] = "Category Management";
}

<div class="card mb-4">
    <div class="card-header">
        <h3 class="card-title">Manage Categories in System</h3>
        <a asp-controller="CategoryManagment" asp-action="Add"
               class="btn btn-success mb-2 d-flex align-items-center ms-auto" style="width: fit-content;">
                <i class="fa-solid fa-plus"></i>
                 Add New Category
            </a>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped table-bordered">
            <!-- Removed role attribute -->
            <thead>
                <tr>
                    <th style="width: 10px" scope="col">#</th>
                    <th scope="col">Category Name</th>
                    <th scope="col">Description</th>
                    <th style="width: 40px" scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int rowCount = 1;
                }
                @foreach (CategoryManagmentIndexViewModel category in Model)
                {
                    <tr class="align-middle">
                        <td>@rowCount.</td>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a asp-controller="CategoryManagment" asp-action="Edit" asp-route-categoryId="@category.Id"
                                   class="btn btn-primary mb-0 d-flex align-items-center">
                                    <i class="fa-solid fa-user-pen me-1"></i>
                                    Edit
                                </a>
                                <button type="button" class="btn btn-danger mb-0 d-flex align-items-center"
                                        asp-controller="CategoryManagment" asp-action="Delete" asp-route-id="@category.Id">
                                    <i class="fa-solid fa-trash-can me-1"></i>
                                    Delete
                                </button>
                            </div>
                        </td>
                    </tr>
                    rowCount++;
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>