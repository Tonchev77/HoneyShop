@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!-- Breadcrumb Section Begin -->
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a href="#"><i class="fa fa-home"></i> Home</a>
                    <span>Register</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Form Section Begin -->
<!-- Register Section Begin -->
<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="register-form">
                    <h2>Register</h2>
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="group-input">
                            <label for="username">Username or email address *</label>
                            <input asp-for="Input.Email" aria-required="true" placeholder="name@example.com" type="text" id="username">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="group-input">
                            <label for="pass">Password *</label>
                            <input asp-for="Input.Password" aria-required="true" placeholder="Password" type="password" id="pass">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="group-input">
                            <label for="con-pass">Confirm Password *</label>
                            <input asp-for="Input.ConfirmPassword" aria-required="true" placeholder="Confirm Password" type="password" id="con-pass">
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button id="registerSubmit" type="submit" class="site-btn register-btn">REGISTER</button>
                    </form>
                    <div class="switch-login">
                        <a asp-area="Identity" asp-page="/Account/Login" class="or-login"> Or Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register Form Section End -->
