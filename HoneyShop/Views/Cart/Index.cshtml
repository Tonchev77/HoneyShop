@using HoneyShop.ViewModels.Cart
@model IEnumerable<GetAllCartItemsViewModel>

<!-- Breadcrumb Section Begin -->
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text product-more">
                    <a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Home</a>
                    <a asp-controller="Shop" asp-action="Index">Shop</a>
                    <span>Shopping Cart</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section Begin -->
<!-- Shopping Cart Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                @if (Model == null || !Model.Any())
                {
                    <div>Currently you don't have added products in you Cart. Please go to Shop and choose products to add in the cart!</div>
                }
                else
                {


                    <div class="cart-table">
                        @foreach (GetAllCartItemsViewModel cartItem in Model)
                        {
                            <table>
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th class="p-name">Product Name</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th><i class="ti-close"></i></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="cart-pic first-row"><img src="@cartItem.ProductDetails.ImageUrl" alt=""></td>
                                        <td class="cart-title first-row">
                                            <h5>@cartItem.ProductDetails.Name</h5>
                                        </td>
                                        <td class="p-price first-row">$@cartItem.ProductDetails.Price</td>
                                        <td class="qua-col first-row">
                                            <div class="quantity">
                                                <div class="pro-qty">
                                                    <input type="number" min="1" value="@cartItem.Quantity"
                                                           data-price="@cartItem.ProductDetails.Price"
                                                           onchange="updateTotal(this)">
                                                </div>
                                            </div>
                                        </td>
                                        <td class="total-price first-row" id="total-@cartItem.ProductDetails.Id">
                                            $@(cartItem.ProductDetails.Price* cartItem.Quantity)
                                        </td>
                                        <td class="close-td first-row"><i class="ti-close"></i></td>
                                    </tr>
                                </tbody>
                            </table>
                        }
                    </div>
                }
                <div class="row">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shopping Cart Section End -->
