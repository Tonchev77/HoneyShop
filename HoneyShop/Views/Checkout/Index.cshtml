@using HoneyShop.ViewModels.Order
@model CreateOrderViewModel

@{
    ViewData["Title"] = "Checkout";
}

<!-- Breadcrumb Section Begin -->
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text product-more">
                    <a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Home</a>
                    <a asp-controller="Cart" asp-action="Index">Shopping Cart</a>
                    <span>Checkout</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->
<!-- Checkout Section Begin -->
<section class="checkout-section spad">
    <div class="container">
        <form asp-action="PlaceOrder" method="post" class="checkout-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="checkout-content">
                        <h4>Shipping Information</h4>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <label for="ShippingCity">City<span>*</span></label>
                            <input asp-for="ShippingCity" type="text" class="form-control" required>
                            <span asp-validation-for="ShippingCity" class="text-danger"></span>
                        </div>
                        <div class="col-lg-12">
                            <label for="ShippingAddress">Street Address<span>*</span></label>
                            <input asp-for="ShippingAddress" type="text" class="form-control" required>
                            <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="checkout-content">
                        <h4>Order Summary</h4>
                    </div>
                    <div class="order-total">
                        <ul class="order-table">
                            <li class="fw-normal">Total <span>$@Model.TotalAmount.ToString("F2")</span></li>
                        </ul>
                        <div class="order-btn">
                            <button type="submit" class="site-btn place-btn">Place Order</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<!-- Checkout Section End -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}