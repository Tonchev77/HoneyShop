@using HoneyShop.ViewModels.Order
@model OrderConfirmationViewModel

@{
    ViewData["Title"] = "Order Confirmation";
}

<!-- Breadcrumb Section Begin -->
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Home</a>
                    <span>Order Confirmation</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->
<!-- Order Confirmation Section Begin -->
<section class="checkout-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h4 class="m-0">Order Placed Successfully!</h4>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <i class="fa fa-check-circle text-success" style="font-size: 60px;"></i>
                            <h5 class="mt-3">Thank you for your order!</h5>
                            <p>Your order has been placed and is being processed.</p>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <h5>Order Details</h5>
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <td>Order Number:</td>
                                            <td>@Model.OrderId</td>
                                        </tr>
                                        <tr>
                                            <td>Order Date:</td>
                                            <td>@Model.OrderDate.ToString("MMMM dd, yyyy")</td>
                                        </tr>
                                        <tr>
                                            <td>Order Status:</td>
                                            <td>@Model.OrderStatus</td>
                                        </tr>
                                        <tr>
                                            <td>Total Amount:</td>
                                            <td>$@Model.TotalAmount.ToString("F2")</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <h5>Shipping Information</h5>
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <td>City:</td>
                                            <td>@Model.ShippingCity</td>
                                        </tr>
                                        <tr>
                                            <td>Address:</td>
                                            <td>@Model.ShippingAddress</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-controller="Shop" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Order Confirmation Section End -->