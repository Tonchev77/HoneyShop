@{
    ViewData["Title"] = "Page Not Found";
    Layout = "_Layout";
}

<!-- Breadcrumb Section Begin -->
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Home</a>
                    <span>404 - Not Found</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->

<section class="spad text-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 style="font-size: 100px; font-weight: bold; color: #dc3545;">404</h1>
                <h3 class="mb-4">Oops! The page you're looking for doesn’t exist.</h3>
                <p class="mb-4">It may have been moved or removed entirely. You can go back to the homepage or continue shopping.</p>
                <a asp-controller="Home" asp-action="Index" class="primary-btn">Go to Homepage</a>
            </div>
        </div>
    </div>
</section>