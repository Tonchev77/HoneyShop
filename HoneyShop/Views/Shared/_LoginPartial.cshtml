@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<div class="ht-right text-end">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="d-flex flex-column align-items-end">
            <span class="text-dark small">Hello, @User.Identity?.Name</span>
            <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" class="m-0">
                <button type="submit" class="btn btn-link text-dark p-0 small">Logout</button>
            </form>
        </div>
    }
    else
    {
        <a asp-area="Identity" asp-page="/Account/Login" class="login-panel">
            <i class="fa fa-user"></i> Login
        </a>
    }
</div>
